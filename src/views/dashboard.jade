doctype html
html(lang="en")
head
    include metatag
    base(href="/dashboard")

    link(rel="stylesheet" href="/stylesheets/font-awesome.min.css")
    link(rel="stylesheet" href="/stylesheets/bootstrap.min.css")
    link(rel="stylesheet" href="/stylesheets/harmony.css")
body(ng-app="AngularApplication" ng-controller="main.ctrl")

    div(class="angular-loading" ng-show="isLoading")
        div(class="loading-wrapper")
            img(src="#{root}/images/ajax-loading.gif" alt="")

    div(class="brand clearfix")
        a(href="./" class="logo")
            img(src="images/logo.png" class="img-responsive" alt="")
        span(class="menu-btn")
            i(class="fa fa-bars")
        ul(class="ts-profile-nav")
            li(class="ts-account")
                a(href="#")
                    img(src="images/ts-avatar.jpg" class="ts-avatar hidden-side" alt="")
                    span Account
                        i(class="fa fa-angle-down hidden-side")
                ul
                    li
                        a(href="./") Logout

    div(class="ts-main-content")
        include dashboard-tab

        div(class="content-wrapper")
            div(class="container-fluid")
                ng-view


